# 应用配置
NODE_ENV=development
PORT=3000

# 数据库配置
DB_TYPE=mysql           # mysql 或 mssql
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=your_password
DB_SYS_NAME=zyt_sys    # 系统主库名

# JWT配置
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h

# 加密配置
CRYPTO_SECRET=your_crypto_secret_key

# AI配置
AI_PROVIDER=openai     # openai/zhipu/qianwen/wenxin
AI_API_KEY=your_api_key
AI_MODEL=gpt-3.5-turbo

# 日志配置
LOG_LEVEL=info
LOG_PATH=logs

# 跨域配置
CORS_ORIGIN=http://localhost:5173
